{
  "name": "nextstep-monorepo",
  "version": "1.0.0",
  "description": "NextStep Full-Stack Application",
  "private": true,
  "workspaces": [
    "frontend",
    "server"
  ],
  "scripts": {
    "setup": "node setup.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run frontend:dev\"",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm run start",
    "install:all": "npm install && cd frontend && npm install && cd ../server && npm install",
    "build": "npm run frontend:build",
    "start": "concurrently \"npm run server:start\" \"npm run frontend:preview\"",
    "lint": "cd frontend && npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
