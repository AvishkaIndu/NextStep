{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=nextstep.db"
  },
  "JwtSettings": {
    "SecretKey": "MineSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "NextStepAPI",
    "Audience": "NextStepClient",
    "ExpiryInHours": 24
  },
  "AppSettings": {
    "ApiVersion": "v1",
    "MaxFileUploadSizeMB": 5,
    "AllowedImageTypes": ["jpg", "jpeg", "png", "gif"],
    "DefaultUserLevel": 1,
    "DefaultUserPoints": 0,
    "BaseUrl": "https://localhost:7010"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
